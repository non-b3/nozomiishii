<!DOCTYPE html>
<html>
  <head>
    <title>Nozomiishii</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <header>
    <div class="header-logo">
      <%= link_to("Nozomi Ishii", "/") %>
    </div>
    <ul class="header-menus">
      <li>
        <%= link_to("About", "/about") %>
      </li>
    </ul>
  </header>
  <% if flash[:notice]%>
    <div class="flash">
      <%= flash[:notice] %>
    </div>
  <% end %>
    <%= yield %>
  </body>
</html>
