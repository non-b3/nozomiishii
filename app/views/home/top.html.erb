<script>
  $(function() {
  $('h1').css('display', 'none').fadeIn(3000);
  $('.main p').css('display', 'none').fadeIn(3100);

  // titile h6 is showing up
  $('.title').hover(function(){
    $(this).find('h6').show(2000)
  });

  // code p are showing up
  $('.code').hover(function(){
    $(this).find('p').animate({'opacity': 1}, 500);
  }, function(){
    $(this).find('p').animate({'opacity': 0}, 500);
  });
});
